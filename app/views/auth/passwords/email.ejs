<title>Quên Mật Khẩu</title>

<div class="row">
	<div class="col-lg-3 col-md-4 mt-sm-30">
	</div>
	<div class="col-lg-6 col-md-4 card card-default rounded-0 shadow blur"  style="border: 1px solid #ccc;">
		<h1 class="mb-20 text-center mt-20">Quên Mật Khẩu</h1>
		<form action="/password/email" method="POST">
			<div class="mt-10" style="border: 1px solid #ccc;">
				<input type="email" name="email" maxlength="255" placeholder="Nhập Email" class="single-input"
					<% if (typeof email != "undefined" && email) { %> value="<%= email %>" <% } %> required>
			</div>

			<% if (typeof conflictError != "undefined" && conflictError) { %>
				<div  class="text-danger text-left  mb-3"><%= conflictError %></div>
				  <% } %>

			<div class="mt-10 text-center  mb-10">
				<input class="genric-btn info circle " type="submit">
			</div>
		</form>
	</div>
</div>


