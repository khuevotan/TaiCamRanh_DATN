
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />

<section class="section-padding"></section>
<section class="section-paddinghai"></section>

<div class="row">
	<div class="col-lg-3 col-md-4 mt-sm-30">
	</div>
	<div class="col-lg-6 col-md-4 card card-default rounded-0 shadow blur" style="border:1px solid black">
		<h1 class="mb-20 text-center mt-20">Đăng Nhập</h1>
		<form action="/login" method="POST" >
		
			<div class="mt-10" style="border:1px solid black" >
				<input type="text" name="taikhoan" class="single-input" placeholder="Nhập tên tài khoản"
				<% if (typeof taikhoan != "undefined" && taikhoan) { %> value="<%= taikhoan %>"<% } %>  required>
			</div>
	
			<div class="mt-10" style="border:1px solid black">
				<input type="password"  id="password-field" class="single-input" name="matkhau"  placeholder="Nhập Password"
						<% if (typeof matkhau != "undefined" && matkhau) { %> value="<%= matkhau %>"<% } %> required>
				
			</div>
			<div class="mt-10" >
				Hiển thị
			<span toggle="#password-field"
					class="fa fa-fw fa-eye field-icon toggle-password"></span> 
			</div>
			<% if (typeof conflictError != "undefined" && conflictError) { %>
				<div  class="text-danger text-left  mb-3"><%= conflictError %></div>
			<% } %>
			
			<div class="mt-10 text-center  mb-10">
				<input class="genric-btn info circle " type="submit">
			</div>
			<!-- <div class="mt-10" style="border:1px solid black" >
				<input  class="form-control btn btn-primary rounded submit px-3" type="submit"> 
			</div> -->
			<div class="form-group d-md-flex">
				<div class="w-50 text-left">
					<label class="checkbox-wrap checkbox-primary mb-0">Ghi Nhớ
						<input type="checkbox" checked />
						<span class="checkmark"></span>
					</label>
				</div>
				<div class="w-50 text-md-right">
					<a href="/password/reset" class="genric-btn link-border circle">Quên Mật Khẩu</a>
				</div>
			</div>
		</form>
		<p class="text-center">
			Chưa có tài khoản?<a href="/register" class="genric-btn link-border circle">Đăng Ký</a>
		</p>
	</div>
	
</div>

<script src="/home/login/js/jquery.min.js"></script>
<script src="/home/login/js/main.js"></script> 

<script>
	function getUrlParameter(name) {
		name = name.replace(/[\[]/, '\\[').replace(/[\]]/, '\\]');
		var regex = new RegExp('[\\?&]' + name + '=([^&#]*)');
		var results = regex.exec(location.search);
		return results === null ? '' : decodeURIComponent(results[1].replace(/\+/g, ' '));
	};

	var status = getUrlParameter('status');

	console.log(status);

	if (status == 'thanhcong'){
		alert("Đổi mật khẩu thành công!");
	}

	if (status == 'doimatkhauthatbai')
	{
		alert("Không thành công!. Mật khẩu phải dài hơn 8 ký tự, cả chữ thường và chữ in hoa, ít nhất một số và một ký tự đặc biệt ví dụ: 012345Kh*");
	}
	if(status == 'taotaikhoantc')
	{
		alert("Tạo tài khoản thành công, vui lòng check mail để xác nhận và đăng nhập!");
	}
</script>