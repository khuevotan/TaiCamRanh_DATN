
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />

<section class="section-padding"></section>
<section class="section-paddinghai"></section>

<div class="row">
	<div class="col-lg-3 col-md-4 mt-sm-30">
	</div>
	<div class="col-lg-6 col-md-4 card card-default rounded-0 shadow blur" style="border:1px solid black">
		<h1 class="mb-30 text-center mt-30">Đăng Nhập</h1>
		<form action="/login" method="POST" >
			<div class="mt-10" style="border:1px solid black" >
				<input type="text" name="taikhoan" class="single-input" placeholder="Tên tài khoản"
				<% if (typeof taikhoan != "undefined" && taikhoan) { %> value="<%= taikhoan %>"<% } %>  required>
			</div>
			<div class="mt-10" style="border:1px solid black">
				<input type="password"  id="password-field" class="single-input" name="matkhau"  placeholder="Password"
						<% if (typeof matkhau != "undefined" && matkhau) { %> value="<%= matkhau %>"<% } %> required>
				
			</div>
			<div class="mt-10" >
				Hiển thị
			<span toggle="#password-field"
					class="fa fa-fw fa-eye field-icon toggle-password"></span> 
			</div>
			<% if (typeof conflictError != "undefined" && conflictError) { %>
				<div class="text-danger text-left  mb-3"><%= conflictError %></div>
			<% } %>
			<div class="mt-10 text-center  mb-10">
				<input class="genric-btn info circle " type="submit">
			</div>
			<!-- <div class="mt-10" style="border:1px solid black" >
				<input  class="form-control btn btn-primary rounded submit px-3" type="submit"> 
			</div> -->
			<div class="form-group d-md-flex">
				<div class="w-50 text-left">
					<label class="checkbox-wrap checkbox-primary mb-0">Remember Me
						<input type="checkbox" checked />
						<span class="checkmark"></span>
					</label>
				</div>
				<div class="w-50 text-md-right">
					<a href="#" class="genric-btn link-border circle">Forgot Password</a>
				</div>
			</div>
		</form>
		<p class="text-center">
			Not a member?<a href="#" class="genric-btn link-border circle">Sign Up</a>
		</p>
	</div>
	<div class="col-lg-3 col-md-4 mt-sm-30">
	</div>
</div>

<script src="/home/login/js/jquery.min.js"></script>
<script src="/home/login/js/popper.js"></script>
<script src="/home/login/js/bootstrap.min.js"></script>
<script src="/home/login/js/main.js"></script> 