<style>
    a {
        color: #00B7FF;
    }
</style>

<title>Giỏ Hàng</title>
<section class=" section-padding">
</section>
<section class=" section-paddinghai">
</section>



<h1>Giỏ Hàng</h1>
<% if (products) {%>
<div class="cart page">
    <ul class="list-group">
        <% for(var i = 0; i < products.length; i++) { %>
        <li class="list-group-item clearfix">
            <div class="col-xs-3">
                <strong> <%= products[i].item.tensp %></strong><br />

            </div>
            <div class="col-xs-2">
                <strong> <%= products[i].item.hinhdd %></strong><br />
            </div>
            <div class="col-xs-2 text-right">
                <span class="badge"> <%= products[i].quantity %></span>
            </div>
            <div class="col-xs-3 text-right">
                <%= products[i].price %> CHF

            </div>
            <div class="col-xs-2 text-right">
                <a href="/remove/<%= products[i].item.masp %>" class="btn btn-default"></i> Remove</a>
            </div>
        </li>
        <% }%>
    </ul>
</div>
<div class="text-right">
    <strong>Total: <%= totalPrice %> CHF</strong>
</div>
<hr>
<div class="text-right">
    <a href="/khachhang/thongtintt/" type="button" class="btn btn-success">Nhập Thông Tin Đơn Hàng</a>
</div>
<% } else{ %>
Your shopping cart is empty.
<% }%>



