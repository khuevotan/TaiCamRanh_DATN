<title>Trang Cá Nhân</title>


<style type="text/css">
  .main-body {
    padding: 15px;
  }

  .card {
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1),
      0 1px 2px 0 rgba(0, 0, 0, 0.06);
  }

  .card {
    position: relative;
    display: flex;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: #fff;
    background-clip: border-box;
    border: 0px solid rgba(0, 0, 0, 0.125);
    border-radius: 0.25rem;
  }

  .card-body {
    flex: 1 1 auto;
    min-height: 1px;
    padding: 1rem;
  }

  .gutters-sm {
    margin-right: -8px;
    margin-left: -8px;
  }

  .gutters-sm>.col,
  .gutters-sm>[class*="col-"] {
    padding-right: 8px;
    padding-left: 8px;
  }

  .mb-3,
  .my-3 {
    margin-bottom: 1rem !important;
  }

  .bg-gray-300 {
    background-color: #e2e8f0;
  }

  .h-100 {
    height: 100% !important;
  }

  .shadow-none {
    box-shadow: none !important;
  }
</style>

<div class="row gutters-sm">
  <div class="col-md-4 mb-3">
    <div class="card card-default rounded-0 shadow blur" style="border:1px solid black">
      <div class="card-body">
        <div class="d-flex flex-column align-items-center text-center">
          <img src="/images/avatarkh/<%= khachhang.hinhdd %>" alt="Avatar khách hàng" class="rounded-circle"
            width="150" />
          <div class="mt-3">
            <h3> <%= khachhang.tenkh %></h3>
            <!-- <button class="btn btn-primary">a</button> -->
          </div>
        </div>
      </div>
    </div>
    <div class="card mt-3">
      <ul class="list-group list-group-flush card card-default rounded-0 shadow blur" style="border:1px solid black">
        <li class="list-group-item  align-items-center flex-wrap center text-center">
          <a class="genric-btn info-border circle" href="/khachhang/dondathang">Đơn Đặt Hàng</a>
        </li>
        <li class="list-group-item  align-items-center flex-wrap center text-center">
          <a class="genric-btn info-border circle" href="/khachhang/dondatlich">Đơn Đặt Lịch</a>
        </li>

        <li class="list-group-item  align-items-center flex-wrap center text-center">
          <a class="genric-btn info-border circle" href="/khachhang/lsdathang">Lịch Sử Mua Hàng</a>
        </li>
        <li class="list-group-item  align-items-center flex-wrap center text-center">
          <a class="genric-btn info-border circle" href="/khachhang/lsdatlich">Lịch Sử Đặt Lịch</a>
        </li>
      </ul>
    </div>
  </div>
  <div class="col-md-8">
    <div class="card mb-3">
      <div class="card-body card card-default rounded-0 shadow blur" style="border:1px solid black">
        <h1 class=" text-center">Thông Tin Cá Nhân</h1>

        <div class="row">

          <div class="col-sm-4">
            </br>
            <h3 class="mb-0">Tên Tài Khoản</h3>
          </div>

          <div class="col-sm-8 text-secondary"> </br><%= khachhang.taikhoan %></div>
        </div>
        <hr />
        <div class="row">
          <div class="col-sm-4">
            <h3 class="mb-0">Họ Và Tên</h3>
          </div>
          <div class="col-sm-8 text-secondary"><%= khachhang.hokh %> <%= khachhang.tenkh %></div>
        </div>
        <hr />
        <div class="row">
          <div class="col-sm-4">
            <h3 class="mb-0">Ngày Sinh</h3>
          </div>
          <div class="col-sm-8 text-secondary">

            <%= moment(khachhang.ngaysinh).format('DD-MM-YYYY')  %>
          </div>
        </div>
        <hr />
        <div class="row">
          <div class="col-sm-4">
            <h3 class="mb-0">Số Điện Thoại</h3>
          </div>
          <div class="col-sm-8 text-secondary"> <%= khachhang.sodt %></div>
        </div>
        <hr />
        <div class="row">
          <div class="col-sm-4">
            <h3 class="mb-0">Email</h3>
          </div>
          <div class="col-sm-8 text-secondary">
            <%= khachhang.email %>
          </div>
        </div>
        <hr />

        <div class="row">
          <div class="col-sm-4">
            <h3 class="mb-0">Giới Tính</h3>
          </div>
          <div class="col-sm-8 text-secondary">
            <%if (khachhang.gioitinh == 1) { %>
            Nam
            <% }else{ %>

            Nữ
            <%}%>
              
                  </div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-4">
                    <h3 class="mb-0">Địa Chỉ</h3>
                  </div>
                  <div class="col-sm-8 text-secondary">
                    <%= khachhang.diachi %>
          </div>
        </div>
        <hr />

        <div class="row">
          <div class="col-sm-4">
            <h3 class="mb-0">Xác Thực Tài Khoản</h3>
          </div>
          <div class="col-sm-8 text-secondary">
            <%if (khachhang.kichhoat == 1) { %>
            Chưa Xác Thực
            <% }else{ %>
            Đã Xác Thực
            <%}%>
                  </div>
                </div>
                <hr />
               
                <div class="row">
                  <div class="col-sm-4">
                    <h3 class="mb-0">Ngày Tạo Tài Khoản</h3>
                  </div>
                  <div class="col-sm-8 text-secondary">
                    <%= moment(khachhang. created_at).format('DD-MM-YYYY HH:mm:ss') %>

          </div>
        </div>
        <hr />

        <div class="row">
          <div class="col-sm-4">
            <h3 class="mb-0">Chỉnh Sửa Gần Nhất</h3>
          </div>
          <div class="col-sm-8 text-secondary">
            <%= moment(khachhang.updated_at).format('DD-MM-YYYY HH:mm:ss') %>

          </div>
        </div>
        <hr />

        <li class=" d-flex justify-content-between">
          <a class="genric-btn info circle" href="/khachhang/chinhsuatt/<%= khachhang.makh %>">Chỉnh Sửa</a>
          <a class="genric-btn info circle" href="/khachhang/doimatkhau/<%= khachhang.makh %>">Đổi Mật Khẩu</a>
          <a class="" href=""></a>
        </li>
      </div>
    </div>
  </div>
</div>


<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>


<script>
  function getUrlParameter(name) {
    name = name.replace(/[\[]/, '\\[').replace(/[\]]/, '\\]');
    var regex = new RegExp('[\\?&]' + name + '=([^&#]*)');
    var results = regex.exec(location.search);
    return results === null ? '' : decodeURIComponent(results[1].replace(/\+/g, ' '));
  };

  var status = getUrlParameter('status');


  if (status == 'success') {
    alert("Chỉnh sửa thành công!");
  }

  if (status == 'thatbai') {
    alert("Không thành công!");
  }
</script>