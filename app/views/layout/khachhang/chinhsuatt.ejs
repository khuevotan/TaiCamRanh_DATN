<title>Chỉnh Sửa Thông Tin Cá Nhân</title>

<style type="text/css">
    
  .main-body {
    padding: 15px;
  }
  .card {
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1),
      0 1px 2px 0 rgba(0, 0, 0, 0.06);
  }

  .card {
    position: relative;
    display: flex;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: #fff;
    background-clip: border-box;
    border: 0px solid rgba(0, 0, 0, 0.125);
    border-radius: 0.25rem;
  }

  .card-body {
    flex: 1 1 auto;
    min-height: 1px;
    padding: 1rem;
  }

  .gutters-sm {
    margin-right: -8px;
    margin-left: -8px;
  }

  .gutters-sm > .col,
  .gutters-sm > [class*="col-"] {
    padding-right: 8px;
    padding-left: 8px;
  }
  .mb-3,
  .my-3 {
    margin-bottom: 1rem !important;
  }

  .bg-gray-300 {
    background-color: #e2e8f0;
  }
  .h-100 {
    height: 100% !important;
  }
  .shadow-none {
    box-shadow: none !important;
  }
</style>


<div class="container">
<div class="row gutters-sm">
  <div class="col-md-4 mb-3">
    <div class=" card card-default rounded-0 shadow blur" style="border: 1px solid #ccc;">
      <div class="card-body">
        <div class="d-flex flex-column align-items-center text-center">
          <img
          src="/images/avatarkh/<%= khachhang.hinhdd %>"
            alt="Khách Hàng"
            class="rounded-circle"
            width="150"
          />
          <div class="mt-3">
            <h3><%= khachhang.tenkh %></h3>
            <!-- <button class="btn btn-primary">a</button> -->
          </div>
        </div>
      </div>
    </div>
      <div class=" mt-3" > 
            <div class="  align-items-center center text-center" >
              <form action="/khachhang/uploadfile/<%= khachhang.hinhdd %>" enctype="multipart/form-data" onSubmit="return confirm('Bạn có chắc chắn muốn đổi?')" method="POST"> 
                <input type="file" name="myFile" accept="image/*"/>
          
                <input class="mt-3 genric-btn info-border circle" type="submit" value="Đổi Ảnh Đại Diện"/>
             </form>
           
            </div>
     </div>
  </div>
  
  <div class="col-md-8">
    <div class=" card card-default rounded-0 shadow blur" style="border: 1px solid #ccc;">
      <h1 class="mt-10 text-center">Chỉnh Sửa Thông Tin</h1>
      <form action="/khachhang/<%= khachhang.makh %>" method="post">
        <input type="hidden" name="_method" value="put" />
        <div class="card-body">

          <div class="row mb-3">
            <div class="col-sm-3">
       
              <h3 class="mb-0">Họ</h3>
            </div>
            <div class="col-sm-9 text-secondary"  >
              <input type="text" style="border: 1px solid #ccc;" class="single-input" id="hokh" name="hokh" value="<%= khachhang.hokh %>" />
            </div>
          </div>
          <hr />

          <div class="row mb-3">
            <div class="col-sm-3">
              <h3 class="mb-0">Tên</h3>
            </div>
            <div class="col-sm-9 text-secondary" >
              <input type="text" style="border: 1px solid #ccc;" class="single-input" id="tenkh" name="tenkh" value="<%= khachhang.tenkh %>" />
            </div>
          </div>
          <hr />
          <div class="row mb-3">
            <div class="col-sm-3">
              <h3 class="mb-0">Ngày Sinh</h3>
            </div>
            <div class="col-sm-9 text-secondary" >
    
              
              <input type="date" style="border: 1px solid #ccc;" class="single-input" id="ngaysinh" name="ngaysinh" value="<%= moment(khachhang.ngaysinh).format('YYYY-MM-DD')%>" />
            </div>
          </div>
          <hr />
          <div class="row mb-3">
            <div class="col-sm-3">
              <h3 class="mb-0">Số Điện Thoại</h3>
            </div>
            <div class="col-sm-9 text-secondary" >
              <input type="text" style="border: 1px solid #ccc;" class="single-input" id="sodt" name="sodt" value="<%= khachhang.sodt %>" />
            </div>
          </div>
          <hr />
          

          <% if (typeof conflictError != "undefined" && conflictError) { %>
            <div  class="text-danger text-left  mb-3"><%= conflictError %></div>
              <% } %>

              
          <div class="row mb-3">
            <div class="col-sm-3">
              <h3 class="mb-0">Giới Tính</h3>
            </div>
            <div class="col-sm-9 text-secondary">
              <!-- <input type="text" class="single-input" id="gioitinh" name="gioitinh" value="<%= khachhang.gioitinh %>" /> -->
            	<div >
                <label for="nam">Nam</label>
                <input type="radio" name="gioitinh" id="male" value="1"   
                <%if (khachhang.gioitinh == 1) { %>
                  checked
                   <% } %>
                >
                <label for="khoangtrang"> </label>
                <label for="nu">Nữ</label>
                <input type="radio" name="gioitinh" id="female" value="2"
                <%if (khachhang.gioitinh != 1) { %>
                  checked
                   <% } %>
                >
              
              </div>
            </div>
          </div>
          <hr />
          <div class="row mb-3">
            <div class="col-sm-3">
              <h3 class="mb-0">Địa Chỉ</h3>
            </div>
            <div class="col-sm-9 text-secondary">
              <input type="text"  style="border: 1px solid #ccc;" class="single-input" id="diachi" name="diachi" value="<%= khachhang.diachi %>" />
            </div>
          </div>
          <hr />
          <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-9 text-secondary">
              <button type="submit" onclick="return confirm('Bạn có chắc chăn muốn cập nhật không?')" class="genric-btn info circle" >Cập Nhật</button>
              <a href="/khachhang/home" class="genric-btn info circle">Trang Cá Nhân</a>


            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
</div>


<script>
  function getUrlParameter(name) {
      name = name.replace(/[\[]/, '\\[').replace(/[\]]/, '\\]');
      var regex = new RegExp('[\\?&]' + name + '=([^&#]*)');
      var results = regex.exec(location.search);
      return results === null ? '' : decodeURIComponent(results[1].replace(/\+/g, ' '));
  };

  var status = getUrlParameter('status');

  if (status == 'successhdd') {
      alert("Đổi hình đại diện thành công!");
  }

  if (status == 'errorhdd') {
      alert("Đổi hình đại diện thất bại!");
  }

</script>