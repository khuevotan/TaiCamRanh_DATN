<div class="page-content fade-in-up">
    <div class="row">
        <div class="col-md-7">
            <% if (typeof status !== 'undefined') { %>
                <%if (status == 'success') { %>

                <div class="ibox ibox-success">
                    <div class="ibox-head">
                        <div class="ibox-title">
                            <div style="color: rgb(255, 255, 255);">
                                Cập Nhật Thành Công!
                            </div>
                        </div>
                        <div class="ibox-tools">
                            <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                            <a class="fullscreen-link"><i class="fa fa-expand"></i></a>
                        </div>

                <% } else { %>
                    <%if (status == 'error') { %>
                <div class=" ibox ibox-danger">
                    <div class="ibox-head">
                            <div class="ibox-title">
                              
                                    <div style="color: rgb(255, 255, 255);">
                                        Đã xảy ra lỗi khi cập nhật Hóa Đơn RX!
                                    </div>
                            </div>
                            <div class="ibox-tools">
                                    <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                                    <a class="fullscreen-link"><i class="fa fa-expand"></i></a>
                            </div>
                        <% } else { %>
                            <div class="ibox ibox-info">
                                <div class="ibox-head">
                                    <div class="ibox-title">
                             
                                        <div style="color: rgb(255, 255, 255);">
                                          
                                        </div>
                                    </div>
                                    <div class="ibox-tools">
                                        <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                                        <a class="fullscreen-link"><i class="fa fa-expand"></i></a>
                                    </div>
                            <% } %>
                <% } %>
            <% } else { %>
            <div class="ibox ibox-info">
                <div class="ibox-head">
                    <div class="ibox-title">
                  
                        <div style="color: rgb(255, 255, 255);">
                            Chỉnh Sửa Thông Tin
                        </div>
                    </div>
                    <div class="ibox-tools">
                        <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                        <a class="fullscreen-link"><i class="fa fa-expand"></i></a>
                    </div>
            <% } %>
                </div>

                <div class="ibox-body">
                    <form action="/admin/hoadonrx/<%= hoadonrx.mahdrx %>" class="form-horizontal"
                        id="form-sample-1" method="post" novalidate="novalidate"
                        onSubmit="return confirm('Bạn có chắc chắn muốn thay đổi thông tin?') "
                        >
                        <input type="hidden" name="_method" value="put" />
                         

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Mã Hóa Đơn</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" name="mahdrx"
                                    value="<%= hoadonrx.mahdrx %>" readonly>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Tên Người Rửa</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" name="tennguoirua"
                                    value="<%= hoadonrx.tennguoirua %>">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Ngày Rửa</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="date" name="ngayrua"

                                <% if(ngayruatd == ''){ %>
                                    value="<%= moment(hoadonrx.ngayrua).format('YYYY-MM-DD')%>" 
                                    <% } else{ %>  
                                        value="<%= moment(ngayruatd).format('YYYY-MM-DD')%>"
                                   <% } %>
                                    readonly>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Giờ</label>
                            <div class="col-sm-10">
                                <select class="form-control" name="magio">
                                    <% for(var i=0; i < gio.length; i++) { %>
                                        <% if(gio[i].magio == hoadonrx.magio){ %>
                                            <option name="magio" selected value="<%= gio[i].magio %>"> <%= gio[i].tengio %></option>
                                            <% } else{ %>  
                                                <option name="magio" value="<%= gio[i].magio %>"> <%= gio[i].tengio %></option>
                                           <% } %>
                                     <%} %>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Số Điện Thoại</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" name="sodt"
                                    value="<%= hoadonrx.sodt %>">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Địa Chỉ</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" name="diachi"
                                    value="<%= hoadonrx.diachi %>">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Ghi Chú</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" rows="6"
                                    name="ghichu"><%= hoadonrx.ghichu %></textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Tổng Tiền Rửa Xe</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" name="tongtienrx"
                                value="<%= hoadonrx.tongtienrx %>">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Phương Thức Thanh Toán</label>
                            <div class="col-sm-10">
                                <select class="form-control" name="ptthanhtoan">
                                        <% if(hoadonrx.ptthanhtoan == 2){ %>
                                            <option name="ptthanhtoan" selected value="2">Thẻ Online</option>
                                            <option name="ptthanhtoan"  value="1">Tại Cửa Hàng</option>
                                            <% } else{ %>  
                                                <option name="ptthanhtoan"  value="2">Thẻ Online</option>
                                                <option name="ptthanhtoan" selected value="1">Tại Cửa Hàng</option>
                                        <% } %>
                                </select>
                            </div>
                        </div>
                        

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Thanh Toán</label>
                            <div class="col-sm-10">
                                <select class="form-control" name="thanhtoan">
                                        <% if(hoadonrx.thanhtoan == 2){ %>
                                            <option name="thanhtoan" selected value="2">Đã Thanh Toán</option>
                                            <option name="thanhtoan"  value="1"> Chưa Thanh Toán</option>
                                            <% } else{ %>  
                                                <option name="thanhtoan"  value="2">Đã Thanh Toán</option>
                                                <option name="thanhtoan" selected value="1"> Chưa Thanh Toán</option>
                                        <% } %>
                                </select>
                            </div>
                        </div>

                       

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Loại Xe</label>
                            <div class="col-sm-10">
                                <select class="form-control" name="malx">
                                    <% for(var i=0; i < loaixe.length; i++) { %>
                                        <% if(loaixe[i].malx == hoadonrx.malx){ %>
                                            <option name="malx" selected value="<%= loaixe[i].malx %>"> <%= loaixe[i].tenlx %></option>
                                            <% } else{ %>  
                                                <option value="<%= loaixe[i].malx %>"> <%= loaixe[i].tenlx %></option>
                                           <% } %>
                                     <%} %>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Trạng Thái</label>
                            <div class="col-sm-10">

                                <select class="form-control" name="matt">
                                    <% for(var i=0; i < trangthai.length; i++) { %>
                                        <% if(trangthai[i].matt == hoadonrx.matt){ %>
                                            <option name="matt" selected value="<%= trangthai[i].matt %>"> <%= trangthai[i].tentt %></option>
                                            <% } else{ %>  
                                                <option value="<%= trangthai[i].matt %>"> <%= trangthai[i].tentt %></option>
                                           <% } %>
                                     <%} %>
                                </select>

                          
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-10 ml-sm-auto">
                                <button class="btn btn-info btn-rounded " type="submit">Cập Nhật</button>
                                <a href="/admin/hoadonrx/details/<%= hoadonrx.mahdrx %>" class="btn btn-info btn-rounded">Xem Chi Tiết</a>
                                
                            </div>
                        </div>
                    </form>
                </div>
            </div> 

       </div>
        <div class="col-md-5">
            <% if (typeof status !== 'undefined') { %>
                <%if (status == 'successhdd') { %>
                    <div class="ibox ibox-success">
                        <div class="ibox-head">
                            <div class="ibox-title">
                                <div style="color: rgb(255, 255, 255);">
                                    Cập Nhật Thành Công!
                                </div>
                            </div>
                            <div class="ibox-tools">
                                <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                                <a class="fullscreen-link"><i class="fa fa-expand"></i></a>
                            </div>

                <% } else { %>

                    <%if (status == 'loingayqk') { %>

                    <div class=" ibox ibox-danger">
                        <div class="ibox-head">
                                <div class="ibox-title">
                                       
                                        <div style="color: rgb(255, 255, 255);">
                                            Không Được Chọn Ngày Ở Quá Khứ!
                                        </div>
                                </div>
                                <div class="ibox-tools">
                                        <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                                        <a class="fullscreen-link"><i class="fa fa-expand"></i></a>
                                </div>
                                <% } else { %>
                                    <div class="ibox ibox-info">
                                        <div class="ibox-head">
                                            <div class="ibox-title">
                                                <div style="color: rgb(255, 255, 255);">
                                                
                                                </div>
                                            </div>
                                            <div class="ibox-tools">
                                                <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                                                <a class="fullscreen-link"><i class="fa fa-expand"></i></a>
                                            </div>
                                <% } %>
                <% } %>
            <% } else { %>
                <div class="ibox ibox-info">
                    <div class="ibox-head">
                        <div class="ibox-title">
                            <div style="color: rgb(255, 255, 255);">
                            Đổi Ngày Khác
                            </div>
                        </div>
                        <div class="ibox-tools">
                            <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                            <a class="fullscreen-link"><i class="fa fa-expand"></i></a>
                        </div>
            <% } %>
                </div>
                <div class="ibox-body">
                    <form action="/admin/hoadonrx/doingay/<%= hoadonrx.mahdrx  %>" 
                        class="form-horizontal"
                        method="POST"
                        onSubmit="return confirm('Bạn có chắc chắn muốn đổi?') "
                        
                        > 
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Ngày Rửa</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="date" name="ngayruatd"
                                    value="<%= moment(ngayruatd).format('YYYY-MM-DD')%>">
                            </div>
                        </div>

                        <input class="btn btn-info btn-rounded " type="submit" value="Đổi Ngày"/>
                      
                     </form>
                </div>
            </div>
        </div>


    </div>
</div>


<!-- Sử dụng cho jquery - validation -->
<script src="/assets/vendors/jquery/dist/jquery.min.js" type="text/javascript"></script>
<script src="/assets/vendors/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $("#form-sample-1").validate({
        rules: {
            tennguoirua: {
                rangelength: [2, 255],
                required: !0
            },
            sodt: {
                number: true,
                rangelength: [2, 15],
                required: !0
            },
            diachi: {
                rangelength: [2, 100],
            },
            ghichu: {
                rangelength: [2, 500],
            }
        },
        errorClass: "help-block error",
        highlight: function(e) {
            $(e).closest(".form-group.row").addClass("has-error")
        },
        unhighlight: function(e) {
            $(e).closest(".form-group.row").removeClass("has-error")
        },
    });
</script>