
    <div class="page-heading">
        <h1 class="page-title">Danh Sách Các Hóa Đơn Rửa Xe</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html"><i class="la la-home font-20"></i></a>
            </li>
            <!-- <li class="breadcrumb-item">DataTables</li> -->
        </ol>
    </div>
    <div class="page-content fade-in-up">
       

            <% if (typeof deleted !== 'undefined') { %>
                <%if (deleted == 'true') { %>

                    <div class="ibox ibox-success">
                        <div class="ibox-head">
                            <div class="ibox-title">   
                                <div style="color: rgb(255, 255, 255);">
                                    Xóa Thành Công!
                                </div>
                            </div>
                        </div>
                <% } %>
           
          <% } else { %>

            <div class="ibox ibox-info">
                <div class="ibox-head">
                    <div class="ibox-title">   
                       
                    </div>
                </div>
            <% } %>
            <div class="ibox-body">
                
                <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>MãHóaĐơn</th>
                            <th>TênNgườiRửa</th>
                            <th>NgàyRửa</th>
                            <th>Giờ</th>
                            <th>LoạiXe</th>
                            <th>TổngTiềnRX</th>
                            <th>GhiChú</th>
                            <th>ThanhToán</th>
                            <th>TrạngThái</th>
                            <th>HànhĐộng</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% hoadonrx.forEach((item) => { %>
                        <tr>
                            <td><%= item.mahdrx %></td>
                            <td><%= item.tennguoirua %></td>
                            <td><%= moment(item.ngayrua).format('DD-MM-YYYY')  %></td>
                            <td>   
                                <% for(var i=0; i<gio.length; i++) { %>
                                
                                    <% if(gio[i].magio == item.magio){ %>
                                        <%= gio[i].tengio %>
                                        <% } else{ %>  
                                   
                                       <% } %>
                                 <%} %>
                            </td>
                            <td>
                                <% for(var i=0; i<loaixe.length; i++) { %>
                                
                                    <% if(loaixe[i].malx == item.malx){ %>
                                        <%= loaixe[i].tenlx %>
                                        <% } else{ %>  
                                   
                                       <% } %>
                                 <%} %>
                            </td>  
                           
                       
                            <td><%= (item.tongtienrx).toLocaleString() %> VNĐ</td>  
                       
                            <td><%= item.ghichu %></td>  
                            <td>
                                <%if (item.thanhtoan == 1) { %>
                                      <span class="badge badge-warning m-r-5 m-b-5">Chưa Thanh Toán </span>
                                    <% }else { %>
                                        <span class="badge badge-success m-r-5 m-b-5">Đã Thanh Toán</span>         
                                    <%  } %>
                            </td>  
                        
                            <td>
                                <% for(var i=0; i<trangthai.length; i++) { %>
                                    <% if(trangthai[i].matt == item.matt && item.matt == 1){ %>
                                    <span class="badge badge-default m-r-5 m-b-5"><%= trangthai[i].tentt %></span>
                                     <% } %>
                                     
                                     <% if(trangthai[i].matt == item.matt && item.matt == 2){ %>
                                        <span class="badge badge-info m-r-5 m-b-5"><%= trangthai[i].tentt %></span>
                                    <% } %>

                                    <% if(trangthai[i].matt == item.matt && item.matt == 3){ %>
                                        <span class="badge badge-danger m-b-5"><%= trangthai[i].tentt %></span>
                                    <% } %>

                                    <% if(trangthai[i].matt == item.matt  && item.matt == 4){ %>
                                        <span class="badge badge-success m-r-5 m-b-5"><%= trangthai[i].tentt %></span>
                                    <% } %>
                                      
                                 <%} %>
                            </td>  
                                <td>
                                    <a href="/admin/hoadonrx/details/<%= item.mahdrx %>" class="btn btn-default btn-xs m-r-5" data-toggle="tooltip" data-original-title="Details"><i class="fa fa-info font-14"></i></a>
                                    <a href="/admin/hoadonrx/edit/<%= item.mahdrx %>" class="btn btn-default btn-xs m-r-5" data-toggle="tooltip" data-original-title="Edit"><i class="fa fa-pencil font-14"></i></a>
                                    <a href="/admin/hoadonrx/delete/<%= item.mahdrx %>" onclick="return confirm('Bạn có chắc chăn muốn xóa không?')" class="btn btn-default btn-xs" data-toggle="tooltip" data-original-title="Delete"><i class="fa fa-trash font-14"></i></a>
                                </td>
                        </tr>     
                        <% }) %>  
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<script type="text/javascript">
    $(function() {
        $('#example-table').DataTable({
            pageLength: 10,
            dom: 'Bfrtip',
            scrollX: true,
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
           
        });
    })
</script>



