
    <div class="page-content fade-in-up">
                    <% if (typeof status !== 'undefined') { %>
                        <%if (status == 'success') { %>

                            <div class="ibox ibox-success">
                                <div class="ibox-head">
                                    <div class="ibox-title">   
                                        <div style="color: rgb(255, 255, 255);">
                                            Tạo Thành Công!
                                        </div>
                                    </div>

                                   
                        <% } else { %>

                            <div class=" ibox ibox-danger">
                                <div class="ibox-head">
                                    <div class="ibox-title">   
                                        <div style="color: rgb(255, 255, 255);">
                                            Đã xảy ra lỗi khi tạo Nhà Cung Cấp!
                                        </div>
                                    </div>

                          
                        <% } %>
                   
                  <% } else { %>

                    <div class="ibox ibox-info">
                        <div class="ibox-head">
                            <div class="ibox-title">   
                                <div style="color: rgb(255, 255, 255);">
                                    Thêm Nhà Cung Cấp Mới
                                </div>
                            </div>
                    <% } %>
            
                <div class="ibox-tools">
                    <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                </div>
              
            </div>
            <div class="ibox-body">
                <form action="/admin/nhacungcap/" 
                class="form-horizontal"  
                id="form-sample-1" 
                method="post" 
             
                onSubmit="return confirm('Bạn có chắc chắn muốn thêm mới?') ">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Tên Nhà Cung Cấp</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="tenncc" >
                        </div>
                        
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Số Điện Thoại</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="number" name="sodt" >
                        </div>
                        
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Địa Chỉ</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="diachi" >
                        </div>
                        
                    </div>
                   
                    
                    <div class="form-group row">
                        <div class="col-sm-10 ml-sm-auto">
                            <button class="btn btn-info btn-rounded" type="submit">Thêm Mới</button>
                            <a href="/admin/nhacungcap/index" class="btn btn-info btn-rounded">Xem Danh Sách</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div>
   
        </div>
    </div>
    <div style="height: 480px;"></div>
<!-- Sử dụng cho jquery - validation -->
<script src="/assets/vendors/jquery/dist/jquery.min.js" type="text/javascript"></script>
<script src="/assets/vendors/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $("#form-sample-1").validate({
        rules: {
            tenncc: {
                rangelength: [2, 255],
                required: !0
            },
            sodt: {
                required: !0,
                number: true,
                rangelength: [2, 15],
            },
            diachi: {
                required: !0,
                rangelength: [2, 255],
            }
        },
        errorClass: "help-block error",
        highlight: function(e) {
            $(e).closest(".form-group.row").addClass("has-error")
        },
        unhighlight: function(e) {
            $(e).closest(".form-group.row").removeClass("has-error")
        },
    });
</script>

