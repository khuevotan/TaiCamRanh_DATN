
    <div class="page-heading">
        <h1 class="page-title">Danh Sách Các Nhóm</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html"><i class="la la-home font-20"></i></a>
            </li>
          
        </ol>
    </div>
    <div class="page-content fade-in-up">
    
            <% if (typeof deleted !== 'undefined') { %>
                <%if (deleted == 'true') { %>

                    <div class="ibox ibox-success">
                        <div class="ibox-head">
                            <div class="ibox-title">   
                                <div style="color: rgb(255, 255, 255);">
                                    Xóa Thành Công!
                                </div>
                            </div>
                        </div>
                <% } %>
           
          <% } else { %>

            <div class="ibox ibox-info">
                <div class="ibox-head">
                    <div class="ibox-title">   
                       
                    </div>
                </div>
            <% } %>
            <div class="ibox-body">
                
                <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Mã Nhóm</th>
                            <th>Tên Nhóm</th>
                            <th>Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% nhom.forEach((item) => { %>
                        <tr>
                            <td><%= item.manhom %></td>
                            <td><%= item.tennhom %></td>
                                <td>
                                    <a href="/admin/nhom/details/<%= item.manhom %>" class="btn btn-default btn-xs m-r-5" data-toggle="tooltip" data-original-title="Details"><i class="fa fa-info font-14"></i></a>
                                    <a href="/admin/nhom/edit/<%= item.manhom %>" class="btn btn-default btn-xs m-r-5" data-toggle="tooltip" data-original-title="Edit"><i class="fa fa-pencil font-14"></i></a>
                                </td>
                        </tr>     
                        <% }) %>  
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<script type="text/javascript">
    $(function() {
        $('#example-table').DataTable({
            pageLength: 10,
            dom: 'Bfrtip',
            scrollX: true,
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
           
        });
    })
</script>



