

<div class="page-content fade-in-up">
  
             <div class="ibox ibox-info">
                    <div class="ibox-head">
                        <div class="ibox-title">
                            <div style="color: rgb(255, 255, 255);">
                                Thông Tin Chi Tiết
                            </div>
                        </div>
                        <div class="ibox-tools">
                            <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                        </div>
                </div>

                <div class="ibox-body">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Mã Bài Viết</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" name="mabv"
                                    value="<%= baiviet.mabv %>" readonly>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Tên Bài Viết</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" name="tenbv"
                                    value="<%= baiviet.tenbv %>" readonly>
                            </div>
                        </div>

                        
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Mô Tả</label>
                            <div class="col-sm-10">
                              

                                    <textarea class="form-control" rows="6"
                                    name="mota" readonly><%= baiviet.mota %></textarea>
                                
                            </div>
                        </div>

                     

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Hình Đại Diện</label>
                            <div class="col-sm-10">
                                <img src="/images/baiviet/<%= baiviet.hinhdd %>" width="200px" />
                            </div>
                        </div>
                      
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Ngày Đăng</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" name="noidung"
                                    value="  <%= moment(baiviet.ngaydang).format('DD-MM-YYYY') %>" readonly>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Mã Nhân Viên Đăng</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" name="manv"
                                    value="  <%=  baiviet.manv %>" readonly>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Nội Dung</label>
                            <div class="col-sm-10">
                                    <textarea id="summernote" data-plugin="summernote" data-air-mode="true" name="noidung">
                                        <%= baiviet.noidung %>
                                    </textarea>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <div class="col-sm-10 ml-sm-auto">
                                <a href="/admin/baiviet/edit/<%= baiviet.mabv %>" class="btn btn-info btn-rounded" >Chỉnh Sửa </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div> 
</div>


