<title>Trang Cá Nhân</title>
<style>
    .profile-social a {
        font-size: 16px;
        margin: 0 10px;
        color: #999;
    }

    .profile-social a:hover {
        color: #485b6f;
    }

    .profile-stat-count {
        font-size: 22px
    }
</style>

<!-- START PAGE CONTENT-->
<div class="page-heading">
    <h1 class="page-title">Thông Tin Cá Nhân</h1>
</div>

<div class="page-content fade-in-up">
    <div class="row">
        <div class="col-lg-3 col-md-4">
            <div class="ibox">
                <div class="ibox-body text-center">
                    <div class="m-t-20">
                        <img class="img-circle" src="/images/avatarad/<%= nhanvien.hinhdd %>" />
                    </div>
                    <h5 class="font-strong m-b-10 m-t-10"><%= nhanvien.honv %> <%= nhanvien.tennv %></h5>
                </div>
            </div>
        </div>

        <div class="col-lg-9 col-md-8">
            <div class="ibox">
                <div class="ibox-body">

                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label>Họ</label>
                            <input class="form-control" type="text" readonly value="<%= nhanvien.honv %>">
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>Tên</label>
                            <input class="form-control" type="text" readonly value="<%= nhanvien.tennv %>">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label>Tên Tài Khoản</label>
                            <input class="form-control" type="text" readonly value="<%= nhanvien.taikhoan %>">
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>Ngày Tạo Tài Khoản</label>
                            <input class="form-control" type="text" readonly
                                value=" <%= moment(nhanvien.created_at).format('DD-MM-YYYY')  %>">
                        </div>
                    </div>

                  

                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label>Số Điện Thoại</label>
                            <input class="form-control" type="text" readonly value="<%= nhanvien.sodt %>">
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>Email</label>
                            <input class="form-control" type="text" readonly value="<%= nhanvien.email %>">
                        </div>
                    </div>

                  
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label>Địa Chỉ</label>
                            <input class="form-control" type="text" readonly value="<%= nhanvien.diachi %>">
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>Lương</label>
                            <input class="form-control" type="text" readonly value="<%= (nhanvien.luong).toLocaleString() %> VNĐ">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label>Ngày Sinh</label>
                            <input class="form-control" type="text" readonly
                                value="<%= moment(nhanvien.ngaysinh).format('DD-MM-YYYY') %>" />
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>Giới Tính</label>
                            <input class="form-control" type="text" readonly <%if (nhanvien.gioitinh == 1) { %>
                                value="Nam" <% }else{ %> value="Nữ" <%}%> >
                        </div>
                        </div>
                                    <div class="row">
                                        <div class="col-sm-6 form-group">
                                            <label>Tên Nhóm</label>
                                            <input class="form-control" type="text" readonly value="<%= nhom %>">
                        </div>

                        <div class="col-sm-6 form-group">
                            <label>Xác Thực</label>
                            <input class="form-control" type="text" readonly <%if (nhanvien.kichhoat == 2) { %>
                                value="Đã Xác Thực" <% }else{ %> value="Chưa Xác Thực" <%}%>
                                            >
                                        </div>
                                    </div>
                                   
                                   
                                    <div class="form-group">
                                        <a href="/admin/chinhsuatt/<%= nhanvien.manv %>"
                                class="btn btn-info btn-rounded">Chỉnh Sửa</a>

                                <a href="/admin/chinhsuatt/formdoimail/<%= nhanvien.manv %>"
                                    class="btn btn-info btn-rounded">Đổi Email</a>

                            <a href="/admin/chinhsuatt/formdmk/<%= nhanvien.manv %>"
                                class="btn btn-info btn-rounded">Đổi Mật Khẩu</a>

                            <% if(nhanvien.kichhoat == 1){ %>

                            <a href="/admin/xacthuctaikhoan/<%= nhanvien.email %>" class="btn btn-info btn-rounded">Gửi
                                Mail Xác Thực</a>

                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="height: 350px;"></div>

    <script>

    const url = window.location.href;
    const status = url.slice(url.lastIndexOf('=') + 1);
   
    if (status == 'updatetc'){
		alert("Cập nhật thành công!");
	}

    if (status == 'doimksuccess') {
        alert("Đổi mật khẩu thành công!");
    }

    if (status == 'daguimailxacthuc') {
        alert("Đã gửi mail xác thực, vui lòng check mail!");
    }

    if (status == 'successdoimail') {
        alert("Đổi email thành công!");
    }

    </script>