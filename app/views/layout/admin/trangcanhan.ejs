<!-- START PAGE CONTENT-->
<div class="page-heading">
    <h1 class="page-title">Thông Tin Cá Nhân</h1>

</div>
<div class="page-content fade-in-up">
    <div class="row">

        <div class="col-lg-3 col-md-4">
            <div class="ibox">
                <div class="ibox-body text-center">
                    <div class="m-t-20">
                        <img class="img-circle" src="/images/avatarad/<%= nhanvien.hinhdd %>" />
                    </div>
                    <h5 class="font-strong m-b-10 m-t-10"><%= nhanvien.tennv %></h5>
                </div>
            </div>
        </div>

        <div class="col-lg-9 col-md-8">
            <div class="ibox">
                <div class="ibox-body">
                    <ul class="nav nav-tabs tabs-line">
                        <li class="nav-item">
                            <a class="nav-link" href="#tab-2" data-toggle="tab"><i class="ti-settings"></i> Thông
                                Tin</a>
                        </li>
                     
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="tab-2">
                            <div class="row">
                                <div class="col-sm-6 form-group">
                                    <label>Họ</label>
                                    <input class="form-control" type="text" readonly value="<%= nhanvien.honv %>">
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>Tên</label>
                                    <input class="form-control" type="text" readonly value="<%= nhanvien.tennv %>">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6 form-group">
                                    <label>Tên Tài Khoản</label>
                                    <input class="form-control" type="text" readonly value="<%= nhanvien.taikhoan %>">
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>Ngày Tạo Tài Khoản</label>
                                    <input class="form-control" type="text" readonly
                                        value="  <%= moment(nhanvien.ngaytaotk).format('DD-MM-YYYY')  %>">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6 form-group">
                                    <label>Số ĐT</label>
                                    <input class="form-control" type="text" readonly value="<%= nhanvien.sodt %>">
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>Email</label>
                                    <input class="form-control" type="text" readonly value="<%= nhanvien.email %>">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Địa Chỉ</label>
                                <input class="form-control" type="text" readonly value="<%= nhanvien.diachi %>">
                            </div>
                            <div class="row">
                                <div class="col-sm-6 form-group">
                                    <label>Ngày Sinh</label>
                                    <input class="form-control" type="text" readonly
                                        value="<%= moment(nhanvien.ngaysinh).format('DD-MM-YYYY') %>" />

                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>Giới Tính</label>
                                    <input class="form-control" type="text" readonly <%if (nhanvien.gioitinh == 1) { %>
                                        value="Nam" <% }else{ %> value="Nữ"
                                        <%}%>


                                            >
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6 form-group">
                                            <label>Mã Nhóm</label>
                                            <input class="form-control" type="text" readonly value="<%= nhanvien.manhom %>">
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>Xác Thực</label>
                                    <input class="form-control" type="text" readonly <%if (nhanvien.kichhoat == 2) { %>
                                        value="Đã Xác Thực" <% }else{ %> value="Chưa Xác Thực" <%}%>
                                            >
                                        </div>
                                    </div>
                                   
                                   
                                    <div class="form-group">
                                        <a href="/admin/chinhsuatt/<%= nhanvien.manv %>"
                                        class="btn btn-info btn-rounded">Chỉnh Sửa</a>

                                        <a href="/admin/chinhsuatt/formdmk/<%= nhanvien.manv %>"
                                            class="btn btn-info btn-rounded">Đổi Mật Khẩu</a>

                                            <% if(nhanvien.kichhoat == 1){ %>
                                                
                                                <a href="/admin/xacthuctaikhoan/<%= nhanvien.email %>"
                                                    class="btn btn-info btn-rounded">Gửi Mail Xác Thực</a>
                                           
                                               <% } %>
                                </div>

                            </div>
                     
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <style>
            .profile-social a {
                font-size: 16px;
                margin: 0 10px;
                color: #999;
            }

            .profile-social a:hover {
                color: #485b6f;
            }

            .profile-stat-count {
                font-size: 22px
            }
        </style>

    </div>

    <script>
        function getUrlParameter(name) {
            name = name.replace(/[\[]/, '\\[').replace(/[\]]/, '\\]');
            var regex = new RegExp('[\\?&]' + name + '=([^&#]*)');
            var results = regex.exec(location.search);
            return results === null ? '' : decodeURIComponent(results[1].replace(/\+/g, ' '));
        };

        var status = getUrlParameter('status');

        console.log(status);

        if (status == 'updatetc') {
            alert("Cập nhật thành công!");
        }
    </script>


