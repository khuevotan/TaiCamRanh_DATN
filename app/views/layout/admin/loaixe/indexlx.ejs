<title>Danh Sách Xe</title>

 <div class="page-content fade-in-up">
            <% if (typeof deleted !== 'undefined') { %>
                <%if (deleted == 'true') { %>
                    <div class="ibox ibox-success">
                        <div class="ibox-head">
                            <div class="ibox-title">   
                                <div style="color: rgb(255, 255, 255);">
                                    Xóa Thành Công!
                                </div>
                            </div>
                        </div>
                <% } %>
           
          <% } else { %>
            <div class="ibox ibox-info">
                <div class="ibox-head">
                    <div class="ibox-title">   
                        <div style="color: rgb(255, 255, 255);">
                            Danh Sách Loại Xe
                        </div>
                    
                    </div>
                </div>
            <% } %>
            <div class="ibox-body">
                <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>MãLoạiXe</th>
                            <th>TênLoạiXe</th>
                            <th>Giá</th>
                            <th>HànhĐộng</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% loaixe.forEach((item) => { %>
                        <tr>
                            <td><%= item.malx %></td>
                            <td><%= item.tenlx %></td>
                            <td><%= (item.gia).toLocaleString() %> VNĐ</td>
                                <td>
                                    <a href="/admin/loaixe/details/<%= item.malx %>" class="btn btn-default btn-xs m-r-5" data-toggle="tooltip" data-original-title="Details"><i class="fa fa-info font-14"></i></a>
                                    <a href="/admin/loaixe/edit/<%= item.malx %>" class="btn btn-default btn-xs m-r-5" data-toggle="tooltip" data-original-title="Edit"><i class="fa fa-pencil font-14"></i></a>
                                    <a href="/admin/loaixe/delete/<%= item.malx %>" onclick="return confirm('Bạn có chắc chăn muốn xóa không?')" class="btn btn-default btn-xs" data-toggle="tooltip" data-original-title="Delete"><i class="fa fa-trash font-14"></i></a>
                                </td>
                        </tr>     
                        <% }) %>  
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<div style="height: 350px;"></div>

<script type="text/javascript">
    $(function() {
        $('#example-table').DataTable({
            pageLength: 10,
            dom: 'Bfrtip',
            scrollX: true,
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
           
        });
    })
</script>



