<link href="/assets/css/pages/mailbox.css" rel="stylesheet" />
    <!-- START PAGE CONTENT-->
   
    <div class="page-content fade-in-up">
            <div class="col-lg-9 col-md-8">
                <div class="ibox" id="mailbox-container">
                    <div class="mailbox-header d-flex justify-content-between">
                        <h5 class="inbox-title">Soạn Mail</h5>
                       
                    </div>
                    <div class="mailbox-body">
                        <form action="/admin/guimail" class="form-horizontal"  method="POST" if="compose_form">
                            <div class="form-group row">
                                <label class="col-sm-2 control-label">Người nhận:</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" name="to" value="example@gmail.com">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 control-label">Tiêu đề:</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" name="subject">
                                </div>
                            </div>
                            <textarea id="summernote" name="message">
                                <h4>Chào Bạn</h4>
                                <p>Khuyến Mãi Nè.</p>
                            </textarea>
                            <input class="btn btn-info m-t-20" type="submit">
                        </form>
                    </div>
                </div>
            </div>
    </div>
       
  
<script type="text/javascript">
    $(function () {
        $('#summernote').summernote();
        $('#summernote_air').summernote({
            airMode: true
        });
    });
</script>

<!-- Sử dụng cho jquery - validation -->
<script src="/assets/vendors/jquery/dist/jquery.min.js" type="text/javascript"></script>
<script src="/assets/vendors/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $("#form-sample-1").validate({
        rules: {
            tenbv: {
                rangelength: [2, 500],
                required: !0
            },
            mota: {
                required: !0,
                rangelength: [2, 500],
            },
            noidung: {
                required: !0,
                rangelength: [2, 10000],
            },
            hinhdd: {
                required: !0,
            }
        },
        errorClass: "help-block error",
        highlight: function(e) {
            $(e).closest(".form-group.row").addClass("has-error")
        },
        unhighlight: function(e) {
            $(e).closest(".form-group.row").removeClass("has-error")
        },
    });
</script>