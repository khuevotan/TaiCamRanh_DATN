<title>Sản Phẩm Sắp Hết</title>
<div class="page-content fade-in-up">
       

            <% if (typeof deleted !== 'undefined') { %>
                <%if (deleted == 'true') { %>

                    <div class="ibox ibox-success">
                        <div class="ibox-head">
                            <div class="ibox-title">   
                                <div style="color: rgb(255, 255, 255);">
                                    Xóa Thành Công!
                                </div>
                            </div>
                        </div>
                <% } %>
           
          <% } else { %>

            <div class="ibox ibox-info">
                <div class="ibox-head">
                    <div class="ibox-title">   
                        <div style="color: rgb(255, 255, 255);">
                            Danh Sách Sản Phẩm Sắp Hết
                        </div>
                    </div>
                </div>
            <% } %>
            <div class="ibox-body">
                
                <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>MãSP</th>
                            <th>TênSảnPhẩm</th>
                            <th>HìnhĐạiDiện</th>
                            <th>SốLượng</th>
                            <th>GiáBán</th>
                            <th>NgàyTạo</th>
                            <th>DanhMục</th>
                
                        
                            <th>HànhĐộng</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% sanpham.forEach((item) => { %>
                        <tr>
                            <td><%= item.masp %></td>
                            <td><%= item.tensp %></td>
                            <td> 
                                <div class="popup">
                                    <img src="/images/sanpham/<%= item.hinhdd %>" />
                                  </div>
                            </td>
                            <td><%= item.soluong %></td>
                            <td><%= (item.giaban).toLocaleString() %> VNĐ</td>
                            <td><%= moment(item.created_at).format('DD-MM-YYYY ') %> </td>
                           
                            <td>
                                <% for(var i=0; i<danhmuc.length; i++) { %>
                                    <% if(danhmuc[i].madm == item.madm){ %>
                                        <%= danhmuc[i].tendm %>
                                        <% } else{ %>  
                                       <% } %>
                                 <%} %>
                            </td>
                                <td>
                                    <a href="/admin/sanpham/details/<%= item.masp %>" class="btn btn-default btn-xs m-r-5" data-toggle="tooltip" data-original-title="Details"><i class="fa fa-info font-14"></i></a>
                                    <a href="/admin/sanpham/edit/<%= item.masp %>" class="btn btn-default btn-xs m-r-5" data-toggle="tooltip" data-original-title="Edit"><i class="fa fa-pencil font-14"></i></a>
                                    <a href="/admin/sanpham/delete/<%= item.masp %>" onclick="return confirm('Bạn có chắc chăn muốn xóa không?')" class="btn btn-default btn-xs" data-toggle="tooltip" data-original-title="Delete"><i class="fa fa-trash font-14"></i></a>
                                </td>
                        </tr>     
                        <% }) %>  
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div style="height: 500px;"></div>
<script type="text/javascript">
    $(function() {
        $('#example-table').DataTable({
            pageLength: 10,
            dom: 'Bfrtip',
            scrollX: true,
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
           
        });
    })
</script>

